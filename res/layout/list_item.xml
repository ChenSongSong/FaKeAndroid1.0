<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- <include 
        layout="@layout/title"/> -->
    <LinearLayout 
        android:id="@+id/contactitem_layout" 
        android:background="#fff" 
        android:paddingLeft="8.0dip" 
        android:layout_height="56.0dip" 
        style="@style/MMListItem">
        <ImageView 
            android:id="@+id/contactitem_avatar_iv" 
            android:layout_width="40.0dip" 
            android:layout_height="40.0dip" />
        <LinearLayout 
            android:orientation="vertical" 
            android:paddingLeft="8.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginRight="10dip"
            android:layout_weight="1.0">
            <TextView 
                android:id="@+id/contactitem_nick" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:singleLine="true" 
                style="@style/MMFontTitleInList" />
        </LinearLayout>
        
         <LinearLayout 
             
            android:orientation="horizontal" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
             android:layout_marginRight="20.0dip"
             >
            <TextView 
                android:id="@+id/is_add" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:singleLine="true" 
                style="@style/MMFontTitleInList" />
        <ImageView 
            android:id="@+id/contactitem_select_cb" 
            android:layout_width="wrap_content" 
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" 
            />
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>
