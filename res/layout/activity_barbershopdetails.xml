<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black4"
    android:orientation="vertical" >
     <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_actionbar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_weight="0">
   
         <ImageView
              android:id="@+id/barberdetailsreback"
              android:layout_width="45dp"
              android:layout_height="match_parent"
              android:layout_marginLeft="5dip"
              android:layout_centerVertical="true"
              android:src="@drawable/btn_back_normal" />
         
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:layout_centerInParent="true"
             android:textColor="@android:color/white"
            android:text="理发店主页"/>
         
    </RelativeLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="0"
         android:background="@drawable/shadowone"
         android:orientation="vertical" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:orientation="horizontal" >

             <ImageView
                 android:id="@+id/im_barbershophead"
                 android:layout_width="130dp"
                 android:layout_height="110dp"
                 android:layout_marginLeft="10dp"
                 android:src="@drawable/barbershop1" />

         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_weight="0" >

             <ImageView
                 android:id="@+id/imageView1"
                 android:layout_width="15dp"
                 android:layout_height="12dp"
                 android:src="@drawable/location" 
                 android:layout_marginLeft="10dp"
                 android:layout_marginBottom="3dp"/>

             <TextView
                 android:id="@+id/textView1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="地址："
                 android:layout_marginLeft="2dp"
                 android:gravity="center"
                 android:textSize="10sp"
                 android:textColor="@color/black3"
                 android:layout_gravity="center" />

         </LinearLayout>

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="0"
         android:background="#fff" 
         android:layout_marginTop="10dp">
     </LinearLayout>

</LinearLayout>
