<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_itemsIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/itemsIcon"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:paddingBottom="2dip"
            android:paddingLeft="5dip"
            android:paddingTop="5dip"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dip"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/ll_itemsIcon"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/ll_shorttitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_shorttitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="短标题"
                    android:textColor="@color/maincolor"        
                    android:textSize="12dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_xiangxi"
                android:layout_width="fill_parent"
                android:layout_height="62dip"
                android:layout_below="@id/ll_shorttitle"
                android:layout_marginTop="5dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:text="【雨花区】"
                    android:textColor="@color/gray_light"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_merchs_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细信息"
                    android:textColor="@color/gray_light"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/ll_xiangxi"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="0.0"
                        android:textSize="12dip" 
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:id="@+id/tv_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@id/tv_price"
                        android:layout_marginLeft="10dip"
                        android:text="0.0"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/tv_bought"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dip"
                        android:layout_alignParentRight="true"
                        android:text="000"
                        android:textSize="12dip" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>